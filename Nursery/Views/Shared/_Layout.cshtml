<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@(ViewData["Description"] ?? "جستجو رستوران به صورت آنلاین")">
    <meta name="keywords" content="@(ViewData["Keywords"] ?? "جستجو، رستوران، غذا، آنلاین، امتیاز دهی")">

    <title>@(ViewData["Title"] ?? "وبسایت")</title>

    <link href="~/css/uikit.min.css" rel="stylesheet" />
    <link href="~/css/Controls.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

</head>
<body>

    <aside class="m-aside">
        @RenderSection("Navigation")
    </aside>

    <header class="m-top">
        <div class="m-header">
            <div class="left">
                <div class="quick-actions">
                    <button class="btn-icon round sign-out">
                        <span uk-icon="log-out-outline"></span>
                    </button>
                    <button class="btn-icon round notifications">
                        <span uk-icon="notifications-outline"></span>
                    </button>
                    <div class="notification-drop" uk-drop="pos: bottom-justify;">
                        <div class="dropdown">
                            <ul class="dropdown-list">
                                <li>
                                    <a href="" class="rowr">
                                        <span class="new">
                                            این یک متن بسیار بسیار بسیار دراز می باشد ها ها ها
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="" class="rowr">
                                        <span class="new">
                                            این یک متن بسیار بسیار بسیار دراز می باشد ها ها ها
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="" class="rowr">
                                        <span>
                                            این یک متن بسیار بسیار بسیار دراز می باشد ها ها ها
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="" class="rowr">
                                        <span>
                                            این یک متن بسیار بسیار بسیار دراز می باشد ها ها ها
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="vertical-divider"></div>
                <div class="user">
                    <div class="column">
                        <h6>نام و نام خانوادگی</h6>
                        <span>نام شیفت</span>
                    </div>
                    <img src="~/img/blue.png" height="48" width="48" alt="عکس کاربر" />
                    <span uk-icon="chevron-down"></span>
                    <div uk-drop="pos: bottom-justify; boundary: .user; boundary-align: true">
                        <div class="dropdown">
                            <ul class="dropdown-list">
                                <li>
                                    <a href="" class="rowr">
                                        <span class="uk-margin-small-left" uk-icon="person-circle-outline"></span>
                                        <span>پروفایل</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="" class="rowr">
                                        <span class="uk-margin-small-left" uk-icon="log-out-outline"></span>
                                        <span>خروج</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="right">
                <!-- ... -->
            </div>
        </div>
        <div class="m-logo">
            <a href="">
                <img src="/svg/logo.svg" width="48" height="48" alt="" />
            </a>
        </div>
    </header>

    <div class="m-content">
        @RenderBody()
    </div>

    <script src="~/js/uikit.min.js"></script>
    <script src="~/js/uikit-icons.js"></script>



    @RenderSection("Scripts", required: false)

</body>
</html>
