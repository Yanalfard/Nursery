
@{
    ViewData["Title"] = "لیست کاربر ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form">
    <div class="form-header">
        <div class="rowr">
            <h2>
                لیست کاربر ها
            </h2>
            <button onclick="window.location = '/User/AddUser'" class="btn btn-primary uk-margin-auto-right">
                <span>اضافه</span>
                <span uk-icon="add-circle-outline"></span>
            </button>
        </div>
    </div>
    <div class="form-header">
        <div class="controls-grid">
            <div class="col">
                <input class="entry" type="text" placeholder="نام">
                <span class="text-danger"></span>
            </div>
            <div class="col">
                <input class="entry" type="tel" placeholder="شماره تلفن">
                <span class="text-danger"></span>
            </div>
            <div class="col">
                <input class="entry" type="text" placeholder="گذرواژه">
                <span class="text-danger"></span>
            </div>
            <div class="col">
                <input class="entry" type="number" placeholder="کد ملی">
                <span class="text-danger"></span>
            </div>
            <div class="col">
                <input class="entry" type="text" placeholder="نام عکس">
                <span class="text-danger"></span>
            </div>
            <div class="col">
                <label class="fg-label uk-margin-auto-left row">
                    حذف شده
                    <input class="uk-checkbox" type="checkbox">
                </label>
                <span class="text-danger"></span>
            </div>
            <button class="btn btn-secondary">
                <span>جستجو</span>
                <span uk-icon="search"></span>
            </button>
        </div>
    </div>

    <div class="form-body scrollh-container uk-padding-remove">
        <table class="tbl tbl-striped" dir="rtl">
            <thead>
                <tr>
                    <th>کد</th>
                    <th>نام</th>
                    <th>شماره تماس</th>
                    <th>تاریخ ثبت نام</th>
                    <th>تاریخ آخرین ورود</th>
                    <th>نقش</th>
                    <th>عملیات</th>
