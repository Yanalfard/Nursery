@model AddKidVm
@{
    ViewData["Title"] = "ویرایش کودک" + Model.Name;
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<form class="form" asp-action="Edit" method="post">
    <input type="hidden" asp-for="KidId" />
    <div class="form-header" dir="rtl">
        <h3>
            ویرایش کودک @Model.Name
        </h3>
    </div>
    <div class="form-body">

        @*<div class="fg-col uk-margin-auto-left">
            <label class="profile-image" style="background-image:url('/st/png/blue.png')" preview="">
                <input type="file" accept="image/png,image/jpg,image/jpeg,image/gif" value="" />
            </label>
        </div>*@

        <div class="grid-400">

            <div class="fg-col ">
                <label class="fg-label" for="name">نام و نام خانوادگی</label>
                <input class="entry" id="Name" type="text" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="tel">نام مستعار</label>
                <input class="entry" id="Nickname" type="text" asp-for="Nickname">
                <span class="text-danger" asp-validation-for="Nickname"></span>
            </div>

        </div>

    </div>
    <div class="form-footer">
        <button class="btn btn-primary"><span>ویرایش</span></button>
    </div>
</form>