@model AddKidVm
@{
    ViewData["Title"] = "کودک جدید";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<form class="form" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-header">
        <h3>
            کودک جدید
        </h3>
    </div>
    <div class="form-body">

        <div class="fg-col uk-margin-auto-left">
            <label class="profile-image" style="background-image:url('/st/png/blue.png')" preview="">
                <input type="file" accept="image/png,image/jpg,image/jpeg,image/gif" id="ImageUrl" asp-for="ImageUrl" />
            </label>
        </div>

        <div class="grid-400">
            <div class="fg-col ">
                <label class="fg-label" for="name">نام و نام خانوادگی</label>
                <input class="entry" id="Name" type="text" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="tel">نام مستعار</label>
                <input class="entry" id="Nickname" type="text" asp-for="Nickname">
                <span class="text-danger" asp-validation-for="Nickname"></span>
            </div>

            @{
                List<TblPage> listPage = ViewBag.RolePageRel as List<TblPage>;

            }

            <div class="fg-col ">
                <label class="fg-label" for="name">بخش</label>
                <select class="uk-select" asp-for="PageId">
                    @foreach (var item in listPage)
                    {
                        <option value="@item.PageId">@item.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="PageId"></span>
            </div>

        </div>

    </div>
    <div class="form-footer">
        <button class="btn btn-primary"><span>اضافه</span></button>
    </div>
</form>