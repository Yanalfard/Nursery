@{
    ViewData["Title"] = "لیست فرم ها";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<!-- This is the modal -->
<div id="Modal" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <h2 class="uk-modal-title">این یک مودال می باشد</h2>
    </div>
</div>

<div class="form">

    <div class="form-header" uk-sticky="offset: 72;cls-active: sticked;bottom: true">
        <div class="rowr">
            <h2 class="card-title">
                لیست بخش ها
            </h2>
            <a onclick="showOtherPage(1)" class="btn btn-secondary uk-margin-auto-right">
                <span>جستوجو</span>
                <span class="tiny" uk-icon="search"></span>
            </a>
            <a href="/Admin/Page/Add" class="btn btn-primary uk-margin-small-right">
                <span>اضافه</span>
                <span class="tiny" uk-icon="plus-square"></span>
            </a>

        </div>
    </div>

    <div class="form-search" uk-sticky="offset: 140;cls-active: sticked uk-box-shadow-medium;bottom:true">
        <form id="formSearchUser" action="/Admin/Page/List" class="controls-grid">
            <input class="entry" type="number" name="id" placeholder="کد" value="">
            <input class="entry" type="text" name="name" placeholder="نام" value="">
            <input class="entry" type="text" name="description" placeholder="توضیحات" value="">
        </form>
    </div>

    <div class="form-body scrollh-container uk-padding-remove">
        <table class="tbl tbl-striped" dir="rtl">
            <thead>
                <tr>
                    <th>کد</th>
                    <th>نام</th>
                    <th>توضیحات</th>
                    <th>تاریخ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>sdf</td>
                    <td>
                        <a href="#ModalDescription_desc" class="btn-icon round text-4" uk-icon="icon:eye;ratio:.5" uk-toggle></a>

                        <!-- Description Modal -->
                        <div id="ModalDescription_desc" uk-modal>
                            <div class="uk-modal-dialog form">
                                <div class="form-header">
                                    <h3>توضیحات</h3>
                                </div>
                                <div class="form-body">
                                    <p>
                                        desc
                                    </p>
                                </div>
                                <div class="form-footer">
                                    <div class="actions">
                                        <button class="btn btn-primary uk-modal-close"><span>بستن</span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>@*@item.Form.DateCreated.Value.AllToShamsi()*@</td>
                    <td class="actions">
                        <a href="" class="btn-icon round text-4" uk-icon="icon:ellipsis-h;ratio:.72"></a>
                        <div class="dropdown" uk-drop="mode: click;offset:4">

                            <ul class="dropdown-list">
                                <li>
                                    <a href="/Admin/Page/" class="rowr">
                                        <span class="new">مشاهده</span>
                                        <span class="small" uk-icon="eye"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/Form/Edit" class="rowr" popconfirm="description:آیا از حذف  اطمینان دارید؟;direction:rt;type:danger;title:هشدار;okText:حذف;" popok="deletePageFormRel()">
                                        <span>ویرایش</span>
                                        <span class="small" uk-icon="pen-square"></span>
                                    </a>
                                </li>
                                <li>
                                    <a class="rowr btn-danger" popconfirm="floating:true;description:آیا از حذف  اطمینان دارید؟;direction:rt;type:danger;title:هشدار;okText:حذف;" popok="deletePageFormRel()">
                                        <span>حذف</span>
                                        <span class="small" uk-icon="trash"></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-footer">
    </div>
</div>

@section Scripts{

    <script>
        require(['config'], function () {
            require(['confirm'], function () {

            })
        });
    </script>

}