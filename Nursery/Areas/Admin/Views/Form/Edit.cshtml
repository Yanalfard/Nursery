@model TblForm
@{
    ViewData["Title"] = "ویرایش فرم";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<form class="form" method="post" asp-action="Edit">
    <input type="hidden" asp-for="FormId" />
    <input type="hidden" asp-for="IsDeleted" />
    <input type="hidden" asp-for="DateCreated" />
    <div class="form-header">
        <h3>
            ویرایش
        </h3>
    </div>
    <div class="form-body">

        <div class="grid-400">

            <div class="fg-col ">
                <label class="fg-label" for="name">نام</label>
                <input class="entry" asp-for="Name" value="@Model.Name" required>
                <span class="text-danger"></span>
            </div>

            <div class="collapsed"></div>

            <div class="fg-col ">
                <label class="fg-label" for="tel">توضیحات</label>
                <textarea class="entry" asp-for="Body" value="@Model.Body" required></textarea>
                <span class="text-danger"></span>
            </div>


            <div class="fg-col ">
                <label class="fg-label" for="name">اولویت فرم</label>
                <select class="uk-select" asp-for="Priority">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
                <span class="text-danger"></span>
            </div>

        </div>

    </div>
    <div class="form-footer">
        <button class="btn btn-primary"><span>ویرایش</span></button>
    </div>
</form>