@{
    ViewData["Title"] = "تایین شیفت";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<form class="form">
    <div class="form-header">
        <h3>
            تایین شیفت
        </h3>
    </div>
    <div class="form-body">

        <div class="grid-400">

            <div class="fg-col ">
                <label class="fg-label" for="name">شیفت</label>
                <select class="uk-select">
                    <option>شیفت شب</option>
                    <option>شیفت صبح</option>
                    <option>شیرخوارگاه</option>
                </select>
                <span class="text-danger"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="tel">از زمان</label>
                <input class="entry" type="time">
                <span class="text-danger"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="tel">تا زمان</label>
                <input class="entry" type="time">
                <span class="text-danger"></span>
            </div>

        </div>

    </div>
    <div class="form-footer">
        <button class="btn btn-primary"><span>اضافه</span></button>
    </div>
</form>