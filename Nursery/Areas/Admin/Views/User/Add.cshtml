@{
    ViewData["Title"] = "کاربر جدید";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";

    bool isEditing = false;

}

<form class="form">
    <div class="form-header">
        @if (isEditing)
        {
            <h3>
                ویرایش
            </h3>
        }
        else
        {
            <h3>
                کاربر جدید
            </h3>
        }
    </div>
    <div class="form-body">

        <div class="fg-col uk-margin-auto-left">
            <label class="profile-image" style="background-image:url('/st/png/blue.png')" preview="">
                <input type="file" accept="image/png,image/jpg,image/jpeg,image/gif" value="" />
            </label>
        </div>

        <div class="grid-400">

            <div class="fg-col ">
                <label class="fg-label" for="name">نام و نام خانوادگی</label>
                <input class="entry" id="name" type="text">
                <span class="text-danger"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="tel">شماره تلفن</label>
                <input class="entry" id="tel" type="tel">
                <span class="text-danger"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="password">گذرواژه</label>
                <input class="entry" id="password" type="text">
                <span class="text-danger"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="identification">کد ملی</label>
                <input class="entry" id="identification" type="text">
                <span class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="form-footer">
        @if (isEditing)
        {
            <button class="btn btn-primary"><span>ویرایش</span></button>
        }
        else
        {
            <button class="btn btn-primary"><span>اضافه</span></button>
        }
    </div>
</form>