@model AddUserVm
@{
    ViewData["Title"] = "کاربر جدید";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<form class="form" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-header">
        <h3>
            کاربر جدید
        </h3>
    </div>
    <div class="form-body">

        <div class="fg-col uk-margin-auto-left">
            <label class="profile-image" style="background-image:url('/st/png/blue.png')" preview="">
                <input type="file" accept="image/png,image/jpg,image/jpeg,image/gif" id="ImageUrl" asp-for="ImageUrl" />
            </label>
        </div>

        <div class="grid-400">

            <div class="fg-col ">
                <label class="fg-label" for="name">نام و نام خانوادگی</label>
                <input class="entry" id="Name" type="text" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="tel">شماره تلفن</label>
                <input class="entry" id="TellNo" type="tel" asp-for="TellNo">
                <span class="text-danger" asp-validation-for="TellNo"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="password">گذرواژه</label>
                <input class="entry" id="Password" type="text" asp-for="Password">  
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="identification">کد ملی</label>
                <input class="entry" id="IdentificationNo" type="text" asp-for="IdentificationNo">
                <span class="text-danger" asp-validation-for="IdentificationNo"></span>
            </div>
        </div>

    </div>
    <div class="form-footer">
        <button class="btn btn-primary"><span>اضافه</span></button>
    </div>
</form>