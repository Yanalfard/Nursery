@model ResetChangePasswordVm
@{
    ViewData["Title"] = "ویرایش گذرواژه";
    Layout = "~/Areas/User/Views/_UserLayout.cshtml";
}

<form class="form" method="post" asp-action="ChangePassword">
    <div class="form-header">
        <h3>
            ویرایش گذرواژه
        </h3>
    </div>
    <div class="form-body">

        <div class="grid-300">

            <div class="fg-col ">
                <label class="fg-label" for="OldPassword">گذرواژه جاری</label>
                <input class="entry" asp-for="OldPassword">
                <span class="text-danger" asp-validation-for="OldPassword"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="Password">گذرواژه جدید</label>
                <input class="entry" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="fg-col ">
                <label class="fg-label" for="RePassword">تکرار گذرواژه</label>
                <input class="entry" asp-for="RePassword">
                <span class="text-danger" asp-validation-for="RePassword"></span>
            </div>

        </div>

    </div>
    <div class="form-footer">
        <button class="btn btn-primary"><span>ویرایش</span></button>
    </div>
</form>